public class Solution {
    public int MajorityElement(int[] nums) 
    {
        int count = 0;
        int candidate = nums[0];

        for (int i = 0; i < nums.Length; i++)
        {
            if (nums[i] == candidate)
            {
                count++;
            }
            else
            {
                count--;
            }

            if (count == 0)
            {
                candidate = nums[i + 1];
            }
        }

        return candidate;
    }
}
